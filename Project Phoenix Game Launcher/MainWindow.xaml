<Window x:Class="Project_Phoenix_Game_Launcher.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project_Phoenix_Game_Launcher"
        mc:Ignorable="d"
        WindowStartupLocation="CenterScreen"
        ContentRendered="Window_ContentRendered"
        Title="MainWindow" Height="576" Width="1000">
    <Grid>
        <Image Stretch="UniformToFill" Source="images/LauncherBackground.png" HorizontalAlignment="Right"/>
        <TextBlock Name="VersionText" Text="Checking Versions..."  VerticalAlignment="Bottom" HorizontalAlignment="Right" FontSize="20" Foreground="#FF00848E" Margin="0,0,10,10"/>
        <Button Name="PlayButton" Content="Checking For Updates..." Click="PlayButton_Click" Height="55" FontSize="28" FontWeight="Bold" Foreground="#DD00FFED" Margin="0,0,0,20" VerticalAlignment="Bottom" HorizontalAlignment="Center" MinWidth="150" Width="370">
            <Button.Background>
                <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#00000000" Offset="0"/>
                    <GradientStop Color="#FF00A8AB" Offset="1"/>
                </LinearGradientBrush>
            </Button.Background>
        </Button>
    </Grid>
</Window>
